@{
    int formNumber = 0;
    int permissionInputNumber = 0;
}

<h4>@Html.Raw(ViewBag.CodeExampleText.ExampleName)</h4>
<p>
    @Html.Raw(ViewBag.CodeExampleText.ExampleDescription)
</p>

<p>
    @Html.Raw(ViewBag.CodeExampleText.Notes)
</p>

@if (ViewBag.showDoc == true)
{
    <p><a target='_blank' href='<%= documentation %>'>Documentation</a> about this example</p>
}

<partial name="../../../Views/Shared/LinkToMethodView" model="ViewBag.CodeExampleText" /> 


<p>
@Html.Raw(
    @String.Format(
        ViewBag.SupportingTexts.ViewSourceFile, 
        "<a target='_blank' href=" + @ViewBag.source + ">DeletePermission.cs</a>"
        )
    )
</p>

<form action="" class="eg" method="post" data-busy="form">

    <div class="form-group">
        <label for="permissionProfileId">
            @Html.Raw(ViewBag.CodeExampleText.Forms[formNumber].Inputs[permissionInputNumber].InputName)
        </label>

        @Html.DropDownList(
            "permissionProfileId",
            ViewBag.PermissionProfiles,
            @ViewBag.CodeExampleText.Forms[formNumber].Inputs[permissionInputNumber].InputPlaceholder,
            new {@class = "custom-select", required = "required" })
    </div>

    <button type="submit" class="btn btn-primary">@Html.Raw(ViewBag.SupportingTexts.SubmitButton)</button>
</form>
